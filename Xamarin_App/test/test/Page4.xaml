<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test.Page4">
    <ContentPage.Content>
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Label Text="Welcome back!"  TextColor="Orange"  FontSize="32"
               FontAttributes="Bold"/>
                <Label Text=" "  TextColor="Orange"  FontSize="32"
               FontAttributes="Bold"/>
                <Label Text="  Press the button below to update the game's cyphers randomly "  TextColor="Black"  FontSize="20"
               FontAttributes="Bold"/>
                <Button Grid.Row="2" Text="Current Cyphers" Clicked="Current_Clicked" TextColor="DarkOrange"/>
                <Button Grid.Row="2" Text="Update Cyphers" Clicked="Update_Clicked" TextColor="DarkOrange"/>
                <Label Text="  "  TextColor="Black"  FontSize="20"
               FontAttributes="Bold"/>
                <Button Grid.Row="2" Text="Log Out" Clicked="LogOut_Clicked" TextColor="DarkOrange"/>
            </StackLayout>
          
        </Grid>
    </ContentPage.Content>
</ContentPage>