<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test.Page3">
    <ContentPage.Content>
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Label Text="Insert your credentials"  TextColor="Orange"  FontSize="24"
               FontAttributes="Bold"/>
                <Label Text="  "  TextColor="Orange"  FontSize="24"
               FontAttributes="Bold"/>
                <Label Text="  "  TextColor="Orange"  FontSize="24"
               FontAttributes="Bold"/>
                <Entry x:Name="Username"
                       Text=""
                       Placeholder="Username"
                       />
                <Entry x:Name="Password"
                       Text=""
                       Placeholder="Password"
                       IsPassword="True" />
            </StackLayout>
            <Button Grid.Row="2" Text="Authenticate" Clicked="Login_Clicked" FontAttributes="Bold" TextColor="DarkOrange"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>